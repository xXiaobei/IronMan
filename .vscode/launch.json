    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "stopOnEntry": false,
            "pythonPath": "${config:python.pythonPath}",
            "program": "${workspaceRoot}/main.py",
            "env": {
                "FLASK_APP": "${workspaceRoot}/main.py"
            },
            "args": ["run", "--no-debugger", "--no-reload"],
            "debugOptions": ["WaitOnAbnormalExit", "WaitOnNormalExit", "RedirectOutput"]
        }
    ]
}
